<table>                                                                                                                                        
  <tr>
    <th>标题</th> 
    <th>摘要</th> 
    <th>作者</th>
  </tr> 
  <% @articles.each do |article| %>
    <tr>
      <td>
        <%= article.title %>
        <%= link_to '详情',article_path(:id => article.id) %>
      </td>
      <td><%= article.summary %></td>
      <td><%= article.user.name if article.user %></td>
    </tr>
  <% end %>
</table>
